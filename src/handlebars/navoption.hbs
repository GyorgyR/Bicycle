<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
<style>
  #options-container {
    overflow-y: hidden;
    animation: slide-down 250ms ease-in;
  }

  @keyframes slide-down {
    0% {
      max-height: {{prevHeight}}px;
      min-height: {{prevHeight}}px;
    }
    100% {
      max-height: 100vh;
      min-height: 0;
    }
  }
</style>
<div id="options-container" class="light-blue-text text-lighten-5">
  {{#each navOptions}}
    <div>{{optionName}}</div>
  {{/each}}
</div>